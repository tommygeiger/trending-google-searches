{
  "name": "Trending Google Searches",
  "description": "Trending Google searches, delivered right to your browser.",
  "version": "1.5",
  "manifest_version": 3,
  "host_permissions": ["https://trends.google.com/"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "32": "assets/32.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    }
  },
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  }
}
