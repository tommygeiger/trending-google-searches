{
  "name": "Under a Rock",
  "description": "News for people who live under a rock.",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["https://trends.google.com/"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "32": "assets/32.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    }
  },
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  }
}
